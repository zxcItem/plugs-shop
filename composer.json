{
    "type": "think-admin-plugin",
    "name": "xiaochao/plugs-shop",
    "version": "dev-master",
    "authors": [
        {
            "name": "叶落无痕",
            "email": "zxcaile@foxmail.com"
        }
    ],
    "require": {
        "php": ">7.1",
        "xiaochao/plugs-account": "dev-master",
        "xiaochao/plugs-payment": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "plugin\\shop\\": "src"
        }
    },
    "extra": {
        "config": {
            "type": "module",
            "name": "通用商城系统",
            "cover": "iconfont iconfont-shoplight",
            "description": "通用商城系统为普通商城基础功能,商品发布，订单发货,售后等"
        },
        "think": {
            "services": [
                "plugin\\shop\\Service"
            ]
        },
        "plugin": {
            "copy": {
                "stc/database": "database/migrations"
            }
        }
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "zoujingli/think-install": true
        }
    }
}
